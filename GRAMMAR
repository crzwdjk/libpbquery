Grammar
   path: <node> [ '.' <node> ]*
   node: <ident> [ '[' <expr> | <list> '] ]?
   expr: [ <int> | <relation> ]
   relation: <item> = <item>
           | <item> != <item>
           | <item> =~ <regex>
           | <item> in <list>
   item: <path> | <lit> | '@'
   lit: <str> | <int> | <float>
   list: <lit> [',' <lit>]*
   ident: [a-zA-Z_][a-zA-Z0-9]*
   int: '-'? [0-9]+
   float: '-'? [0-9]+ '.' [0-9]*

